
Object subclass: Room [
    | desc n s w e |

    Room class >> new [
        | room |
        room := super new.
        ^room
    ]
    n: n_ s: s_ w: w_ e: e_ desc: desc_ [
        n := n_.
        s := s_.
        w := w_.
        e := e_.
        desc := desc_.
    ]

]

        new_paths := Dictionary new.
        new_paths at: 'entrance'            put: (Room new n: 'antechamber' s: '' w: '' e: ''
                                                desc: #('You are at the entrance to tomb. There is an gate before you, with small cat door')).
        new_paths at: 'antechamber'         put: (Room new n: 'altar_room' s: 'entrance' w: 'jar_room' e: 'attendant_room'
                                                desc: #('You are in the first room. The walls are covered in hieroglyphic description of the antient curse that forbids any cat that walks in there to go to heaven. They will be forever doomed to live in the tomb, turned into skeletons.')).
